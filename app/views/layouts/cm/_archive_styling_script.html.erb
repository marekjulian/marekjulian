<script>
    var viewportHeight = document.viewport.getHeight();
    $$('html').invoke('setStyle', 'height: ' + viewportHeight + 'px');
    $$('body').invoke('setStyle', 'height: ' + (viewportHeight - 20) + 'px');
    $$('.ArchiveBody').invoke('setStyle', 'max-height: ' + (viewportHeight - 170) + 'px');
    $$('.ArchiveImageList').invoke('setStyle', 'max-height: ' + (viewportHeight - 350) + 'px');
    $$('.ImageVariantList').invoke('setStyle', 'max-height: ' + (viewportHeight - 320) + 'px');
</script>
